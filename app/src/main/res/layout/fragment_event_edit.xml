<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_gradient"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/txtLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:textSize="25dp"
            android:text="Edit event"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Title"/>

        <EditText
            android:id="@+id/event_edit_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/input_new_event_bg"
            android:hint="@string/HINT_EVENT_NAME"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="text"
            android:textColor="@color/input_new_event"
            android:textColorHint="@color/input_new_event_hint" >
        </EditText>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Currency"/>

        <Spinner
            android:id="@+id/event_edit_currency"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/input_new_event_bg"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_new_event"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Color"/>

        <EditText
            android:id="@+id/event_edit_color"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/input_new_event_bg"
            android:hint="#Color"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="text"
            android:textColor="@color/input_new_event"
            android:textColorHint="@color/input_new_event_hint" />

        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="100dp"
             android:orientation="vertical">

             <TextView
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:text="Expenses:"/>

             <ListView
                 android:id="@+id/event_list_expenses"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:background="@color/input_new_event_bg"
                 android:textColor="@color/white">
             </ListView>
        </LinearLayout>

        <Button
            android:id="@+id/btnAddExpense"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@color/input_new_event_bg"
            android:text="Create expense"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Total expenses:"/>

        <EditText
            android:id="@+id/event_edit_total_expenses"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/input_new_event_bg"
            android:hint="total expenses"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="none"
            android:textColor="@color/input_new_event"
            android:textColorHint="@color/input_new_event_hint" />

        </LinearLayout>
</LinearLayout>